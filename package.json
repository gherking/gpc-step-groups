{
  "name": "gpc-step-groups",
  "version": "1.0.0",
  "description": "Precompiler for Gherking",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "cross-env JEST_JUNIT_OUTPUT_DIR=./reports jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gherking/gpc-step-groups.git"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.21",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typedoc": "^0.20.16",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "debug": "^4.3.1",
    "gherkin-ast": "^3.2.1",
    "gherking": "1.0.0-beta.6"
  },
  "keywords": [
    "Gherking",
    "Gherking",
    "Cucumber"
  ],
  "author": "The GherKing team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gherking/gpc-step-groups/issues"
  },
  "homepage": "https://github.com/gherking/gpc-step-groups#readme",
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "./src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
